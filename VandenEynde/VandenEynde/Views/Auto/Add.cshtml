 @using Domain
       @using VandenEynde.Controllers
       @model Domain.Auto
       
       @{
           ViewBag.Title = "Niewe auto";
           Layout = "_Layout";
       }
       
       <h2>Nieuwe auto</h2>
       <p>Registreer een nieuw voertuig.</p>
       <form asp-controller="Auto" asp-action="Add" method="post">
           <div class="div-container">
               <div class="div-left">
                   <dl class="dl-horizontal">
                       <dt class="dd-dt"><label for="Naam">Naam</label></dt><dd class="dd-dt"><input asp-for="Naam" class="inputdetails"></input></dd>
                       <dt class="dd-dt"><label for="Bouwjaar">Bouwjaar</label></dt><dd class="dd-dt"><input asp-for="Bouwjaar" class="inputdetails"></input></dd>
                       <dt class="dd-dt"><label for="Banden">Banden</label></dt><dd class="dd-dt"><input asp-for="Banden" class="inputdetails"></input></dd>
                   </dl>
               </div>
               &nbsp;
               <div class="div-right">
       
                   <dl class="dl-horizontal">
                       <dt class="dd-dt"><label for="OlieInhoud">Olie inhoud</label></dt><dd class="dd-dt"><input class="inputdetails" asp-for="OlieInhoud"></dd>
                       <dt class="dd-dt"><label for="CylinderInhoud">Cylinder inhoud</label></dt><dd class="dd-dt"><input class="inputdetails" asp-for="CylinderInhoud"></dd>
                       <dt class="dd-dt"><label for="VermogenKw">Vermogen (KW)</label></dt><dd class="dd-dt"><input class="inputdetails" asp-for="VermogenKw"></dd>
                       <dt class="dd-dt"><label for="MotorCode">Motorcode</label></dt><dd class="dd-dt"><input class="inputdetails" asp-for="MotorCode"></dd>
                   </dl>
               </div>
           </div>
           <div class="div-buttons">
               <input type="submit" value="Opslaan" class="btn btn-default"/>&nbsp;&nbsp;&nbsp;
               <a class="btn btn-default" asp-controller="Auto" asp-action="Index" type="Submit" >Annuleren</a>&nbsp;&nbsp;&nbsp;
       
       
               </div>
       </form>
