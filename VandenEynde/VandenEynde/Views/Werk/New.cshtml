@model Domain.Werk

@{
    ViewBag.Title = "Nieuw werk -" + Model.Auto.Naam;
    Layout = "_Layout";
}

<h2>Nieuw werk voor @Model.Auto.Naam</h2>
<p>Maak een nieuw werk item aan.</p>

<form asp-controller="Werk" asp-action="New" method="post">
    <div class="div-container">
        <div class="div-left">
            <dl class="dl-horizontal">
                <dt class="dd-dt"><label for="Auto.AutoId">Auto</label></dt>
                <dd class="dd-dt">@Model.Auto.Naam</dd>
                <dt class="dd-dt"><label for="Datum">Datum</label></dt>
                <dd class="dd-dt"><input asp-for="Datum" class="inputdetails"/></dd>
                <dt class="dd-dt"><label for="KilometerStand">Kilometerstand</label></dt>
                <dd class="dd-dt"><input asp-for="KilometerStand" class="inputdetails"/></dd>
                <dt class="dd-dt"> <label for="Extra">Opmerkingen</label></dt>
                <dd class="dd-dt"><textarea asp-for="Extra" cols="40" rows="5" class="inputdetails"></textarea></dd>
            </dl>
        </div>
        &nbsp;
        <div class="div-right">

            <dl class="dl-horizontal">
                <dt class="dd-dt"><label for="OliefilterVervangen">Olie filter</label></dt>
                <dd class="dd-dt"><input type="checkbox" name="OliefilterVervangen" class="inputdetails" asp-for="OliefilterVervangen"></dd>
                <dt class="dd-dt"><label for="LuchtfilterVervangen">Lucht filter</label></dt>
                <dd class="dd-dt"><input type="checkbox" name="LuchtfilterVervangen" class="inputdetails" asp-for="LuchtfilterVervangen"></dd>
                <dt class="dd-dt"><label for="BrandstoffilterVervangen">Brandstof filter</label></dt>
                <dd class="dd-dt"><input type="checkbox" name="BrandstoffilterVervangen" class="inputdetails" asp-for="BrandstoffilterVervangen"></dd>
                <dt class="dd-dt"><label for="InterieurfilterVervangen">Interieur filter</label></dt>
                <dd class="dd-dt"><input type="checkbox" name="InterieurfilterVervangen" class="inputdetails" asp-for="InterieurfilterVervangen"></dd>
            </dl>
        </div>
    </div>
    <div class="div-buttons">
        <input type="submit" value="Opslaan" class="btn btn-default" />&nbsp;&nbsp;&nbsp;
        <a class="btn btn-default" asp-controller="Werk" asp-action="Index" type="Submit">Annuleer</a>&nbsp;&nbsp;&nbsp;
    </div>
</form>